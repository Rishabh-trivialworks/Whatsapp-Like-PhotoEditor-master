<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

  <Button
      android:id="@+id/select_image_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Select Image"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_below="@id/select_image_btn"
      android:layout_height="match_parent">

  <ImageView
      android:id="@+id/edited_image1"
      android:layout_width="200dp"
      android:layout_height="200dp"

      android:src="@mipmap/ic_launcher"
      />

    <ImageView
        android:id="@+id/edited_image2"
        android:layout_width="200dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentRight="true"
        android:layout_height="200dp"/>

    <ImageView
        android:id="@+id/edited_image3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/edited_image1"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_launcher"
        />

    <ImageView
        android:id="@+id/edited_image4"
        android:layout_width="200dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/edited_image2"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_height="200dp"/>
</RelativeLayout>

</RelativeLayout>